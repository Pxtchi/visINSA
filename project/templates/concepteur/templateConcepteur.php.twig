<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{{ titre }}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('icons/faticon.ico') }}">
    <link rel="stylesheet" href="{{ asset('CSS/index.css') }}">
    <meta name="viewport" content="width=device-width, user-scalable=no,initial-scale=0.9">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    {% block styles %}
    {% endblock %}
    {% block scripts %}
    {% endblock %}
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark loginHeader">
                <div class="navbar-collapse collapse width-100 order-1 order-md-0 dual-collapse2">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="switch" href="{{ path('concepteur') }}">{{ titre }}</a>
                        </li>
                    </ul>
                </div>
    </header>

    {% block main %}
    {% endblock %}

    <footer>
        <ul id="ulFooter">
            {% if path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) == "/concepteur" %}
                <li class="liactive">
            {% else %}
                <li class="liFooter">
            {% endif %}
            <a href="{{ path('concepteur_home')}}" alt="Accueil"><img class="logoNav" src="/content/accueil.png" alt="Accueil"/></a></li>

            {% if path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) == "/concepteur/questions" %}
                <li class="liactive">
            {% else %}
                <li class="liFooter">
            {% endif %}
            <a href="{{ path('concepteur_questions')}}" alt="scan"><img class="logoNav" src="/content/questions-et-reponses.png" alt="question"/></a></li>

            {% if path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) == "/concepteur/etapes" %}
                <li class="liactive">
            {% else %}
                <li class="liFooter">
            {% endif %}
            <a href="{{ path('concepteur_etapes')}}" alt="adv"><img class="logoNav" src="/content/flag.png" alt="adv"/></a></li>

            {% if path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) == "/concepteur/aventure" %}
                <li class="liactive">
            {% else %}
                <li class="liFooter">
            {% endif %}
            <a href="{{ path('concepteur_aventure')}}" alt="rank"><img class="logoNav" src="/content/map.png" alt="rank"/></a></li>
        </ul>
    </footer>